<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    android:layout_height="match_parent"
    tools:context=".activities.splash.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" android:layout_alignParentStart="true" android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/rahbarbazaar_logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="104dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_11sdp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:id="@+id/txtStaticpeysepar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtStaticpeysepar"
            android:layout_marginTop="@dimen/_2sdp">
            <TextView android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:textSize="@dimen/_12ssp"
                android:id="@+id/txtVersionSplash"
                android:layout_height="wrap_content"
                android:text=""/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/ivIcon"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <LinearLayout android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="#00695C"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressSplash"
                    android:theme="@style/ProgressBar"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="#00695C"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>